<p id="notice"><%= notice %></p>

<h1>Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Label</th>
      <th>Open tag</th>
      <th>Close tag</th>
      <th>Position</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.label %></td>
        <td><%= field.open_tag %></td>
        <td><%= field.close_tag %></td>
        <td><%= field.position %></td>
        <td><%= field.section.name %></td>
        <td><%= link_to 'Show', section_field_path(field.section, field) %></td>
        <td><%= link_to 'Edit', edit_section_field_path(field.section, field) %></td>
        <td><%= link_to 'Destroy', section_field_path(field.section, field), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

