<%= form_for([section, field]) do |f| %>
  <% if field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(field.errors.count, "error") %> prohibited this field from being saved:</h2>

      <ul>
      <% field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :label %>
    <%= f.text_field :label %>
  </div>

  <div class="field">
    <%= f.label :open_tag %>
    <%= f.text_field :open_tag %>
  </div>

  <div class="field">
    <%= f.label :close_tag %>
    <%= f.text_field :close_tag %>
  </div>

  <div class="field">
    <%= f.label :position %>
    <%= f.number_field :position %>
  </div>

  <div class="field">
    <%= f.label :section_id %>
    <%= f.text_field :section_id, value: section.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
