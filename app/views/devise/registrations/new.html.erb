<h2>Cadastro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% resource.errors.each do |attr, message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <div class="input-field">
    <%= f.text_field :name, autofocus: true, required: true %>
    <%= f.label :name, "Nome completo" %><br />
  </div>
  <div class="input-field">
    <%= f.text_field  :alias, required: true %>
    <%= f.label :alias, "Nome de usuÃ¡rio (Apelido)" %><br />
  </div>
  <div class="input-field">
    <%= f.email_field :email, required: true %>
    <%= f.label :email, "E-mail" %><br />
  </div>
  <div class="input-field">
    <%= f.text_field  :college %>
    <%= f.label :college, "InstituiÃ§Ã£o" %><br />
  </div>

  <div class="input-field">
    <%= f.password_field :password, autocomplete: "off", required: true %>
    <%= f.label :password, "Senha" %>
  </div>

  <div class="input-field">
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
    <%= f.label :password_confirmation, "Confirmar senha" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
